<div class="col-12 col-md-6 col-lg-2">
  <div class="main">
    <h1>Add User</h1>
    <form id="add-user">
      <div class="form-floating mb-3">
        <input type="text" aria-label="username" class="form-control" id="username" placeholder="username" required maxlength="16">
        <label for="username">Username</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" aria-label="new-password" class="form-control" id="password" placeholder="password" required minlength="8">
        <label for="password">Password</label>
      </div>
      <button type="submit" class="btn btn-lg btn-primary">Add User</button>
    </form>
  </div>
</div>